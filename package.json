{
  "name": "lp-api",
  "version": "0.1.0",
  "author": "Michael Macias <zaeleus@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc",
    "lint": "tslint --project .; test $? -eq 0 -o $? -eq 2",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.ts",
    "testRegex": "\\.test\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.18.2",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "graphql": "^0.11.7",
    "graphql-tools": "^2.18.0",
    "js-joda": "^1.6.2",
    "knex": "^0.14.2",
    "morgan": "^1.9.0",
    "objection": "^0.9.4",
    "pg": "^7.4.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.0",
    "@types/jest": "^22.0.1",
    "@types/knex": "^0.14.0",
    "@types/morgan": "^1.7.35",
    "jest": "^22.1.3",
    "nodemon": "^1.14.11",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
